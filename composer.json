  "keywords": [
    "basho",
    "riak",
    "client",
    "driver",
    "database",
    "nosql",
    "kv",
    "datatype",
    "crdt",
    "data"
  ],
  "homepage": "http://basho.com/riak/",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Christopher Mancini",
      "email": "cmancini@basho.com",
      "homepage": "https://github.com/christophermancini",
      "role": "Lead Developer"
    },
    {
      "name": "Alex Moore",
      "email": "amoore@basho.com",
      "homepage": "https://github.com/alexmoore",
